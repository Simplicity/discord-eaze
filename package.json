{
  "name": "discord-eaze",
  "version": "1.0.1",
  "description": "Class based bot framework using discord.js.",
  "main": "dist/index.js",
  "author": "Almeida <almeida@dbm-network.org> (https://almeeida.github.io)",
  "contributors": [
    "Almeida <almeida@dbm-network.org> (https://almeeida.github.io)",
    "Tsugami"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --fix --ext ts",
    "prebuild": "yarn lint",
    "build": "rimraf dist/ && tsc",
    "pretest": "yarn build",
    "dev": "ts-node-dev --respawn --transpileOnly ."
  },
  "dependencies": {
    "discord.js": "^12.1.1",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SimplicityDiscord/discord-eaze.git"
  },
  "homepage": "https://github.com/SimplicityDiscord/discord-eaze#readme",
  "keywords": [
    "discord",
    "discord-js",
    "discord.js",
    "discord-api",
    "framework",
    "bot",
    "modular"
  ],
  "bugs": {
    "url": "https://github.com/SimplicityDiscord/discord-eaze/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
